<UserControl x:Class="WeSplitApp.UserControls.PlacesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeSplitApp.UserControls"
             xmlns:xlocal ="clr-namespace:WeSplitApp"
             
             xmlns:model="clr-namespace:WeSplitApp.Models"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}"
             Background="Transparent"
             DataContext="{StaticResource PUCVM}"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1000" MinHeight="665">
    <UserControl.Resources>

        <ObjectDataProvider x:Key="themeColor"
                      ObjectType="{x:Type xlocal:Global}"
                      MethodName="GetInstance" />


        <model:BytesToBitMapConverter x:Key="ImageConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Current trips-->
        <Border Grid.Column="0"  Grid.Row="2" Grid.RowSpan="2" Background="White" VerticalAlignment="Center"
                        CornerRadius="50" Height="700" MinHeight="300" Padding="0" RenderOptions.BitmapScalingMode="HighQuality" Margin="10 10 10 5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="10"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <Border  CornerRadius="50 50 0 0"  BorderThickness="0" BorderBrush="Black" Height="100" Background="{Binding Source={StaticResource themeColor},Path=ThemeColor}">
                    <TextBlock Text="DANH SÁCH ĐỊA DANH" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontWeight="Medium"></TextBlock>
                </Border>
                <ListView x:Name="PlaceList" ItemsSource="{Binding LocationList}" SelectedItem="{Binding SelectedLocation}">
                    <ListView.ItemTemplate >
                        <DataTemplate>
                            <Grid Margin="0" Width="100" >
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" FontSize="12" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <TextBlock Text="{Binding Province}" FontSize="10" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <TextBlock Text="{Binding Address}" FontSize="10" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                    <Image Source="{Binding ImageBytes, Converter={StaticResource ImageConverter}}" VerticalAlignment="Center" HorizontalAlignment="Left"></Image>
                                    <Button
                                        Style="{StaticResource MaterialDesignFlatMidBgButton}"
                                        ToolTip="MaterialDesignFlatMidButton" Content="DELETE"
                                        Command="{Binding ElementName=PlaceList, Path=DataContext.DeletePlaceCommand}" CommandParameter="{Binding}">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>

        <!--History trips-->
        <Border Grid.Column="1"  Grid.Row="1" Grid.RowSpan="2" Background="White"
                        CornerRadius="50" Height="700" MinHeight="300" Padding="0" RenderOptions.BitmapScalingMode="HighQuality" Margin="10 10 10 5" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="10"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <Border  CornerRadius="50 50 0 0"  BorderThickness="0" BorderBrush="Black" Height="100" Background="{Binding Source={StaticResource themeColor},Path=ThemeColor}">
                    <StackPanel Orientation="Horizontal" Width="227">
                        <TextBlock Text="{Binding UpdateOrAddContent}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontWeight="Medium"></TextBlock>
                        <TextBlock Text=" ĐỊA DANH" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontWeight="Medium"/>
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Vertical" Margin="0 20 0 0 ">
                    <TextBox Grid.Row="0" Grid.Column="0" Margin="10"
                              materialDesign:HintAssist.Hint="Tên Địa Danh"
                              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                              VerticalAlignment="Center"
                                 FontSize="25" Text="{Binding LocationName}"/>

                    <Border Height="200" MinHeight="150" CornerRadius="20" BorderThickness="1" BorderBrush="#03254c" Margin="10">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding ImageCover, Converter={StaticResource ImageConverter}}" RenderOptions.BitmapScalingMode="HighQuality"></ImageBrush>
                        </Border.Background>
                        <Button
                            Grid.Column="0"
                            Grid.Row="1"
                          Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                          ToolTip="MaterialDesignFloatingActionDarkButton"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" Command="{Binding AddImageCommand}"
                            Background="{Binding Source={StaticResource themeColor},Path=ThemeColor}"
                            Visibility="{Binding AddImageButtonVisibility}">
                            <materialDesign:PackIcon
                                Kind="ImagePlus"
                                Height="24"
                                Foreground="White"
                                Width="24" />   
                        </Button>
                    </Border>



                    <TextBox Grid.Row="1" Grid.Column="0"
                              materialDesign:HintAssist.Hint="Địa chỉ"
                              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                              VerticalAlignment="Center"
                                 FontSize="25" Margin="10" Text="{Binding LocationAddress}"/>
                        


                    <TextBox Grid.Row="1" Grid.Column="1" Margin="10"
                             MaxLines="4"
                             materialDesign:HintAssist.Hint="Thông tin"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             VerticalAlignment="Center" Text="{Binding LocationDescription}" />

                    <ComboBox Grid.Row="1" Grid.Column="2" Margin="10"
                      materialDesign:HintAssist.Hint="Search"
                      materialDesign:HintAssist.HintOpacity=".26" SelectedItem="{Binding SelectedProvince}" ItemsSource="{Binding ProvinceList}"
                      IsEditable="True" DisplayMemberPath="Name">
                    </ComboBox>

                    <Button
                        Margin="0 10 0 0"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Width="150"
                        ToolTip="Resource name: MaterialDesignRaisedAccentButton"
                        materialDesign:RippleAssist.Feedback="#DD000000" Command="{Binding AddLocationCommand}" Content="{Binding UpdateOrAddContent}">
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
