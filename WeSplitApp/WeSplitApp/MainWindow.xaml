<Window x:Class="WeSplitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WeSplitApp.UserControls"
        xmlns:local="clr-namespace:WeSplitApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="WeSplit" Height="1024" Width="1440" MinWidth="940" MinHeight="665">
    <Border CornerRadius="40" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="288"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <uc:ControlBarUC Grid.Column="0" Grid.ColumnSpan="2"/>
        </Grid>
    </Border>
</Window>
